  /* Full conversation buttons (ORANGE) */
  .convbtn{width:100%; text-align:left; padding:14px 16px; font-size:18px; border:1px solid var(--border); border-radius:10px; background:#fff; color:#000; cursor:pointer; margin:10px 0;}
